---
import type { SiteData } from '../../types/site';
import type { ThemeColors } from '../../lib/themes';

interface Props {
  site: SiteData;
  theme: ThemeColors;
}

const { site, theme: t } = Astro.props;
---

<body class="bg-white text-gray-900 font-sans antialiased">

  <section class="py-20 px-4 border-b border-gray-100">
    <div class="max-w-3xl mx-auto">
      <h1 class={`text-4xl md:text-5xl font-bold mb-4 ${t.ctaText}`}>{site.hero.headline}</h1>
      <p class="text-xl text-gray-500 mb-8">{site.hero.subheadline}</p>
      <a
        href={`tel:${site.contact.phone}`}
        class={`inline-block ${t.contactBg} ${t.contactText} font-semibold px-8 py-3 rounded-lg transition-opacity hover:opacity-90 text-lg`}
      >
        {site.contact.cta_text}
      </a>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold mb-4">{site.about.title}</h2>
      <p class="text-lg text-gray-600 leading-relaxed">{site.about.text}</p>
    </div>
  </section>

  <section class="py-16 px-4 border-t border-gray-100">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Uslugi</h2>
      <ul class="space-y-6">
        {site.services.map((s) => (
          <li class="border-b border-gray-100 pb-6 last:border-0">
            <h3 class="text-lg font-semibold mb-1">{s.name}</h3>
            <p class="text-gray-600">{s.description}</p>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <section class={`${t.contactBg} ${t.contactText} py-12 px-4`}>
    <div class="max-w-3xl mx-auto flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h2 class="text-xl font-bold">Kontakt</h2>
        <p class="text-sm opacity-90">{site.contact.address}</p>
      </div>
      <a
        href={`tel:${site.contact.phone}`}
        class="inline-block bg-white/20 backdrop-blur font-semibold px-6 py-2 rounded-lg transition-colors hover:bg-white/30 text-lg"
      >
        {site.contact.phone}
      </a>
    </div>
  </section>

  <footer class="py-6 text-center text-sm text-gray-400">
    <p>Strona wygenerowana przez <a href="https://wizytowka.link" class="underline">wizytowka.link</a></p>
  </footer>

</body>

---
import type { SiteData } from '../../types/site';
import CategoryLogo from '../CategoryLogo.astro';

interface Props {
  site: SiteData;
  category: string;
}

const { site, category } = Astro.props;
---

<Fragment>

  <section class="hero-section border-b border-border px-4">
    <div class="max-w-3xl mx-auto">
      <div class="inline-flex items-center gap-3">
        <CategoryLogo category={category} />
        <h1 class="hero-title text-primary">{site.hero.headline}</h1>
      </div>
      <p class="hero-sub text-muted-foreground">{site.hero.subheadline}</p>
      <span class="hero-divider !mx-0" aria-hidden="true"></span>
      <a
        href={`tel:${site.contact.phone}`}
        aria-label={`Zadzwoń: ${site.contact.phone}`}
        class="cta bg-primary text-primary-foreground mt-8"
      >
        {site.contact.cta_text}
      </a>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="section-title mb-4">{site.about.title}</h2>
      <p class="text-lg text-muted-foreground leading-relaxed">{site.about.text}</p>
    </div>
  </section>

  <section class="py-16 px-4 border-t border-border">
    <div class="max-w-3xl mx-auto">
      <h2 class="section-title mb-8">Usługi</h2>
      <ul class="space-y-6 list-none p-0 m-0">
        {site.services.map((s) => (
          <li class="border-b border-border pb-6 last:border-0">
            <h3 class="text-lg font-semibold mb-1">{s.name}</h3>
            <p class="text-muted-foreground">{s.description}</p>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <section class="bg-primary text-primary-foreground py-12 px-4">
    <div class="max-w-3xl mx-auto flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h2 class="text-xl font-bold">Kontakt</h2>
        <address class="text-sm opacity-90 not-italic">{site.contact.address}</address>
      </div>
      <a
        href={`tel:${site.contact.phone}`}
        aria-label={`Zadzwoń: ${site.contact.phone}`}
        class="cta bg-accent text-accent-foreground"
      >
        {site.contact.phone}
      </a>
    </div>
  </section>

  <footer class="py-6 text-center text-sm text-muted-foreground">
    <p>Strona wygenerowana przez <a href="https://wizytowka.link" class="underline hover:text-foreground transition-colors">wizytowka.link</a></p>
  </footer>

</Fragment>

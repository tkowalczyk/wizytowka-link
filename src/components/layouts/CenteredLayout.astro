---
import type { SiteData } from '../../types/site';

interface Props {
  site: SiteData;
}

const { site } = Astro.props;
---

<Fragment>

  <section class="hero-section bg-gradient-to-br from-hero to-hero-end text-hero-foreground px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="hero-title">{site.hero.headline}</h1>
      <p class="hero-sub text-hero-accent">{site.hero.subheadline}</p>
      <span class="hero-divider" aria-hidden="true"></span>
      <a
        href={`tel:${site.contact.phone}`}
        aria-label={`Zadzwoń: ${site.contact.phone}`}
        class="cta bg-accent text-accent-foreground mt-8"
      >
        {site.contact.cta_text}
      </a>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="section-title mb-4">{site.about.title}</h2>
      <p class="text-lg text-muted-foreground leading-relaxed">{site.about.text}</p>
    </div>
  </section>

  <section class="bg-muted py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="section-title text-center mb-12">Usługi</h2>
      <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 list-none p-0 m-0">
        {site.services.map((s) => (
          <li class="card bg-card text-card-foreground">
            <h3 class="text-xl font-semibold mb-2">{s.name}</h3>
            <p class="text-muted-foreground">{s.description}</p>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <section class="bg-primary text-primary-foreground py-16 px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="section-title mb-4">Kontakt</h2>
      <address class="text-lg mb-2 not-italic opacity-90">{site.contact.address}</address>
      <a
        href={`tel:${site.contact.phone}`}
        aria-label={`Zadzwoń: ${site.contact.phone}`}
        class="cta bg-accent text-accent-foreground mt-4"
      >
        {site.contact.phone}
      </a>
    </div>
  </section>

  <footer class="py-6 text-center text-sm text-muted-foreground">
    <p>Strona wygenerowana przez <a href="https://wizytowka.link" class="underline hover:text-foreground transition-colors">wizytowka.link</a></p>
  </footer>

</Fragment>
